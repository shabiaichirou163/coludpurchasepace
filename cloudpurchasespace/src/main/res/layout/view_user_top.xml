<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#1E90C2">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"></LinearLayout>
        <ImageView
            android:layout_margin="10dp"
            android:id="@+id/user_settings"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/shez_2x"/>
        <ImageView
            android:layout_margin="10dp"
            android:id="@+id/user_notice"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/note_2x"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_marginBottom="10dp"
            android:id="@+id/user_nickname"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text="nil"
            android:textSize="16sp"
            android:textColor="#000000"/>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:orientation="vertical">
        <FrameLayout
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.cloudpurchase.veiw.RoundImageView
                android:id="@+id/user_headImg"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:src="@mipmap/a_ad_user1_2x"/>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="bottom"
            android:background="#ED1437"
            android:orientation="horizontal">
            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/user_integral"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:lines="1"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:textSize="13sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="积分"
                    android:lines="1"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:textSize="13sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="1dp"
                android:layout_height="35dp"
                android:background="#FFFFFF"
                ></LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/user_smallGold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:lines="1"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:textSize="13sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="大金币"
                    android:lines="1"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:textSize="13sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="1dp"
                android:layout_height="35dp"
                android:background="#FFFFFF"
                ></LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/user_bigGold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:lines="1"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:textSize="13sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="小金币"
                    android:lines="1"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:textSize="13sp"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/user_vipLv"
            android:background="@mipmap/btn_yellow_2x"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="nil"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="#5B4F5A"
            android:layout_gravity="center" />
    </FrameLayout>
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </FrameLayout>
</LinearLayout>
