<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroud_color_white"
    android:orientation="vertical"
    tools:context="com.cloudpurchase.cloudpurchase.SmallRoomGoodsDetailsActivity">
    <LinearLayout
        android:background="@mipmap/login_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageButton
                android:id="@+id/small_room_goodsDetails_back"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/left2x"
                android:background="@null"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="商品详情"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:gravity="center" />
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true">
                <ImageButton
                    android:id="@+id/small_room_goodsDetails_shopping_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@mipmap/shopping_cart"
                    android:background="@null"/>
                <TextView
                    android:id="@+id/small_room_activity_goods_details_shopping_count"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/textview_shape"
                    android:layout_gravity="right"
                    android:gravity="center"
                    android:text="1"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="7dp"
                    android:textColor="@color/text_color_red"
                    android:textSize="@dimen/text_size_12"
                    android:visibility="invisible"/>
            </FrameLayout>
        </RelativeLayout>
    </LinearLayout>
    <com.cloudpurchase.veiw.LoadMoreScrollView
        android:id="@+id/small_room_goods_details_pullandload_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/small_room_goods_details_header_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"></LinearLayout>
            <include layout="@layout/activity_goods_details_share"></include>
            <LinearLayout
                android:id="@+id/small_detail_into_room"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <com.cloudpurchase.veiw.RoundImageView
                    android:id="@+id/small_detail_img"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@mipmap/ip"/>
                <TextView
                    android:id="@+id/small_detail_who_room"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="钱多多的一元抢宝铺"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/text_color_block"
                    android:textSize="@dimen/top_text_14"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="进入宝铺"
                    android:drawableRight="@mipmap/right_2x"
                    android:gravity="right"
                    android:drawablePadding="10dp"
                    android:textColor="@color/text_color_block"
                    android:textSize="@dimen/top_text_14"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#F7F7F7">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ebebeb"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:paddingLeft="20dp"
                android:paddingTop="20dp"
                android:paddingBottom="25dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12:18:32"
                        android:textSize="@dimen/text_size_12"
                        android:textColor="@color/text_color_gray"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="话多多"
                            android:textSize="@dimen/text_size_12"
                            android:textColor="@color/color_blue"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="5dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="参与了"
                                android:textSize="@dimen/text_size_12"
                                android:textColor="@color/text_color_block"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="3"
                                android:textSize="@dimen/text_size_12"
                                android:textColor="@color/text_color_red"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="人次"
                                android:textSize="@dimen/text_size_12"
                                android:textColor="@color/text_color_block"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12:18:32"
                        android:textSize="@dimen/text_size_12"
                        android:textColor="@color/text_color_gray"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="钱多多"
                            android:textSize="@dimen/text_size_12"
                            android:textColor="@color/color_blue"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="潇洒进入了房间"
                                android:textSize="@dimen/text_size_12"
                                android:textColor="@color/text_color_block"
                                android:layout_marginTop="5dp"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12:18:32"
                        android:textSize="@dimen/text_size_12"
                        android:textColor="@color/text_color_gray"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="话多多"
                            android:textSize="@dimen/text_size_12"
                            android:textColor="@color/color_blue"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="5dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="参与了"
                                android:textSize="@dimen/text_size_12"
                                android:textColor="@color/text_color_block"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="3"
                                android:textSize="@dimen/text_size_12"
                                android:textColor="@color/text_color_red"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="人次"
                                android:textSize="@dimen/text_size_12"
                                android:textColor="@color/text_color_block"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12:18:32"
                        android:textSize="@dimen/text_size_12"
                        android:textColor="@color/text_color_gray"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="钱多多"
                            android:textSize="@dimen/text_size_12"
                            android:textColor="@color/color_blue"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="退出了房间"
                            android:textSize="@dimen/text_size_12"
                            android:textColor="@color/text_color_block"
                            android:layout_marginTop="5dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal"
                android:background="#FFFFFF"
                android:paddingBottom="15dp">
             <FrameLayout
                 android:layout_width="wrap_content"
                 android:layout_height="match_parent">
                 <com.cloudpurchase.veiw.RoundImageView
                     android:layout_width="32dp"
                     android:layout_height="32dp"
                     android:src="@mipmap/ip"
                     android:layout_marginLeft="36dp"
                     android:layout_marginTop="28dp"/>
                 <ImageView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_marginTop="5dp"
                     android:layout_marginLeft="10dp"
                     android:src="@mipmap/winner"
                     android:background="@null"/>
             </FrameLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="25dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="\t获奖者: "
                           android:textSize="@dimen/text_size_10"
                           android:textColor="@color/text_color_gray"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="钱多多"
                            android:textSize="@dimen/text_size_10"
                            android:textColor="@color/text_color_block"
                            android:layout_marginLeft="5dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="\t用户ID: "
                            android:textSize="@dimen/text_size_10"
                            android:textColor="@color/text_color_gray"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="8466844(唯一不变的标示)"
                            android:textSize="@dimen/text_size_10"
                            android:textColor="@color/text_color_block"
                            android:layout_marginLeft="5dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="本期参与: "
                            android:textSize="@dimen/text_size_10"
                            android:textColor="@color/text_color_gray"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10人次"
                            android:textSize="@dimen/text_size_10"
                            android:textColor="@color/text_color_block"
                            android:layout_marginLeft="5dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="揭晓时间: "
                            android:textSize="@dimen/text_size_10"
                            android:textColor="@color/text_color_gray"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2016-06-26 22:39:00:00"
                            android:textSize="@dimen/text_size_10"
                            android:textColor="@color/text_color_block"
                            android:layout_marginLeft="5dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="15dp"
                    android:background="#FFFFFF">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/backgroud_winner"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:paddingRight="10dp"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="中奖号码:"
                        android:textSize="@dimen/text_size_12"
                        android:textColor="@color/backgroud_color_white"
                        android:textStyle="bold"
                        android:layout_marginTop="3dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="100000018"
                        android:textSize="@dimen/top_text_16"
                        android:textColor="@color/backgroud_color_white"
                        android:textStyle="bold"
                        android:layout_marginTop="3dp"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="计算详情"
                        android:textSize="@dimen/text_size_12"
                        android:textColor="@color/backgroud_color_white"
                        android:background="@mipmap/back_white"
                        android:gravity="center"
                        android:layout_marginTop="3dp"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </com.cloudpurchase.veiw.LoadMoreScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/unfocused"></LinearLayout>
    <LinearLayout
        android:id="@+id/goods_details_small_btn_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">
        <TextView
            android:id="@+id/activity_goods_info_forseller_goodsdetails"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableLeft="@mipmap/detail"
            android:text="详情"
            android:textColor="@color/text_color_block"
            android:gravity="center_vertical"/>
        <TextView
            android:id="@+id/activity_goods_info_forseller_agoshow"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableLeft="@mipmap/ago"
            android:text="往期"
            android:textColor="@color/text_color_block"
            android:gravity="center_vertical"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:id="@+id/activity_goods_info_forseller_share"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableLeft="@mipmap/share"
            android:text="分享"
            android:textColor="@color/text_color_block"
            android:gravity="center_vertical"
            android:layout_marginLeft="20dp"/>
        <Button
            android:id="@+id/small_activity_goods_info_loot_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@mipmap/btn_red_backgroud"
            android:text="参与夺宝"
            android:textSize="@dimen/top_text_14"
            android:textColor="@color/backgroud_color_white"
            android:layout_marginLeft="25dp"
            android:gravity="center" />
    </LinearLayout>
</LinearLayout>
