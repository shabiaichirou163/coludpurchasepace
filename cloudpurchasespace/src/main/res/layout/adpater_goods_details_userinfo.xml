<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/listview_seller"
    android:orientation="horizontal"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">
    <FrameLayout
        android:layout_width="38dp"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/unfocused"
            android:layout_gravity="center"></LinearLayout>
        <com.cloudpurchase.veiw.RoundImageView
            android:id="@+id/adpater_goods_details_user_img"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:src="@mipmap/ip"
            android:layout_gravity="center_vertical"
            android:paddingTop="15dp"/>
    </FrameLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="10dp"
    android:paddingTop="15dp">
   <TextView
       android:id="@+id/adpater_goods_details_user_name_txt"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="话多多"
       android:textColor="@color/color_blue"
       android:textSize="@dimen/text_size_12"/>
    <TextView
        android:id="@+id/adpater_goods_details_user_addr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(泉州市 ip:121.205.30.118)"
        android:textColor="@color/text_color_gray"
        android:textSize="@dimen/text_size_12"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="参与了"
            android:textColor="@color/text_color_block"
            android:textSize="@dimen/text_size_12"/>
        <TextView
            android:id="@+id/adpater_goods_details_user_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:textColor="@color/text_color_red"
            android:textSize="@dimen/text_size_12"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="人次"
            android:textColor="@color/text_color_block"
            android:textSize="@dimen/text_size_12"/>
        <TextView
            android:id="@+id/adpater_goods_details_data_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016-05-29 21:14:43.088"
            android:textColor="@color/text_color_gray"
            android:textSize="@dimen/text_size_12"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>
</LinearLayout>
</LinearLayout>
