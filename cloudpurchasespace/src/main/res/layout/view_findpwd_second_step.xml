<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#F4F4F4"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="您正在找回账号"
            android:textColor="@color/text_color_gray"
            android:textSize="14sp"/>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/findPwd_second_EDNumber"
                android:textColor="@color/text_color_gray"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13718231903"/>
            <TextView
                android:textColor="@color/text_color_gray"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="的密码"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#C8C8C8"></LinearLayout>
<LinearLayout
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="账号已绑定手机："
        android:textSize="14sp"
        android:textColor="@color/text_color_gray"/>
    <TextView
        android:id="@+id/findPwd_second_bindingNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/text_color_gray"
        android:text="13718231903"/>
</LinearLayout>
    <Button
        android:layout_marginTop="15dp"
        android:textColor="#FFFFFF"
        android:text="获取验证码"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@mipmap/ljdb_2x"
        android:id="@+id/findPwd_second_getCode">
    </Button>
    <LinearLayout
        android:id="@+id/findPwd_second_View"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:id="@+id/findPwd_second_reGetCode"
            android:layout_marginLeft="10dp"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginRight="8dp"
            android:background="@mipmap/yzm2x"
            android:text="获取验证码"
            android:textColor="#FFFFFF"/>
        <EditText
            android:singleLine="true"
            android:lines="1"
            android:maxLength="6"
            android:phoneNumber="true"
            android:id="@+id/findPwd_second_EDCode"
            android:background="#FFFFFF"
            android:textSize="14sp"
            android:hint="请输入短信验证码"
            android:paddingLeft="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp" />
        <Button
            android:layout_marginTop="15dp"
            android:textColor="#FFFFFF"
            android:text="下一步"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@mipmap/ljdb_2x"
            android:id="@+id/findPwd_second_btn">
        </Button>
    </LinearLayout>
</LinearLayout>