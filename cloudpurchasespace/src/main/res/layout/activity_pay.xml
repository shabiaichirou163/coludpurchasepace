<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/unfocused"
    tools:context="com.cloudpurchase.cloudpurchase.PayActivity"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/backgroud_color_red">
        <ImageButton
            android:id="@+id/activity_pay_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/back_2x"
            android:layout_marginLeft="10dp"
            android:background="@null"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="支付订单"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:textColor="@color/text_color_white"
            android:textSize="@dimen/top_text_size"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/backgroud_color_white"
        android:orientation="horizontal"
        android:padding="10dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品合计"
            android:textColor="@color/text_color_block"
            android:textSize="@dimen/top_text_18"/>
        <TextView
            android:id="@+id/activity_pay_speak_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您将花费1金币购买1种商品,要如实完成支付哦"
            android:textSize="@dimen/text_size_12"
            android:textColor="@color/text_color_gray"
            android:layout_marginTop="5dp"/>
    </LinearLayout>
        <TextView
            android:id="@+id/activity_pay_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1金币"
            android:textSize="@dimen/top_text_18"
            android:textColor="@color/text_color_red"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="支付方式"
        android:textColor="@color/text_color_block"
        android:textSize="@dimen/top_text_18"
        android:layout_marginTop="15dp"
        android:background="@color/backgroud_color_white"
        android:padding="10dp"/>
    <LinearLayout
        android:id="@+id/activity_pay_remain_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/backgroud_color_white"
        android:padding="10dp"
        android:gravity="center_vertical">
    <TextView
        android:id="@+id/activity_pay_remainpay_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="余额支付(余额：0元)"
        android:textColor="@color/text_color_block"
        android:textSize="@dimen/top_text_14" />
        <ImageView
            android:id="@+id/activity_pay_remain_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/checkbox_normal"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="其它支付方式"
        android:textColor="@color/text_color_block"
        android:textSize="@dimen/top_text_14"
        android:layout_marginTop="1dp"
        android:background="@color/backgroud_color_white"
        android:padding="10dp"/>
    <LinearLayout
        android:id="@+id/activity_pay_zhifubao_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/backgroud_color_white"
        android:padding="10dp"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/a_amdin_ioszf_2x"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="支付宝"
            android:textColor="@color/text_color_block"
            android:textSize="@dimen/top_text_14"
            android:layout_marginLeft="5dp"/>
        <ImageView
            android:id="@+id/activity_pay_zhifubao_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/z_admin_2x_checked"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/activity_pay_weixin_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/backgroud_color_white"
        android:padding="10dp"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/a_amdin_ioszf2_2x"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="微信"
            android:textColor="@color/text_color_block"
            android:textSize="@dimen/top_text_14"
            android:layout_marginLeft="5dp"/>
        <ImageView
            android:id="@+id/activity_pay_weixin_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/z_admin_2x"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/activity_pay_yinlian_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/backgroud_color_white"
        android:padding="10dp"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/yinlian"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="银联"
            android:textColor="@color/text_color_block"
            android:textSize="@dimen/top_text_14"
            android:layout_marginLeft="5dp"/>
        <ImageView
            android:id="@+id/activity_pay_yinlian_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/z_admin_2x"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/backgroud_color_white"
        android:padding="10dp"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="总计支付"
            android:textColor="@color/text_color_block"
            android:textSize="@dimen/top_text_16" />
        <TextView
            android:id="@+id/activity_pay_total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1金币"
            android:textSize="@dimen/top_text_16"
            android:textColor="@color/text_color_red"/>
    </LinearLayout>
    <Button
        android:id="@+id/activity_pay_confirm_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:padding="10dp"
        android:background="@mipmap/btn_red_backgroud"
        android:text="确认支付"
        android:textColor="@color/text_color_white"
        android:textSize="@dimen/top_text_18"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:text="友情提示:众筹有风险,购买需谨慎"
        android:textColor="@color/text_color_block"/>
</LinearLayout>
