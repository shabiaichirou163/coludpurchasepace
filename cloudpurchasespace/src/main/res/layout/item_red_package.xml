<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF">
    <LinearLayout
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="90dp"
            android:orientation="vertical"
            android:background="@mipmap/a_admin_hb_2x">
            <LinearLayout
                android:layout_marginTop="35dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/redPackage_item_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textSize="20sp"
                    android:textColor="#F7E61C"/>
                <TextView
                    android:layout_marginLeft="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="元"
                    android:textSize="10sp"
                    android:textColor="#FFFFFF"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="满"
                    android:textSize="10sp"
                    android:textColor="#FFFFFF"/>
                <TextView
                    android:id="@+id/redPackage_item_term"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:textColor="#FFFFFF"
                    android:textSize="10sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="元使用"
                    android:textSize="10sp"
                    android:textColor="#FFFFFF"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/redPackage_item_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="新用户红包"
                        android:textColor="#000000"
                        android:textSize="14sp"/>
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:textColor="@color/text_color_gray"
                            android:textSize="10sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="生效期："/>
                        <TextView
                            android:textColor="@color/text_color_gray"
                            android:id="@+id/redPackage_item_bornTime"
                            android:textSize="10sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2016年6月15日10:38:16"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:textColor="@color/text_color_gray"
                            android:textSize="10sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="有效期："/>
                        <TextView
                            android:textColor="@color/text_color_gray"
                            android:id="@+id/redPackage_item_validityPeriod"
                            android:textSize="10sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2016年6月15日10:38:16"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/redPackage_item_img"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="25dp"
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:src="@mipmap/a_admin_tabalt_2x"
                        android:layout_gravity="right|center_vertical" />
                    <TextView
                        android:layout_marginRight="10dp"
                        android:id="@+id/redPackage_item_use"
                        android:layout_marginLeft="40dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="使用"
                        android:textSize="12sp"
                        android:textColor="#5EB1F1"
                        android:layout_gravity="right|bottom" />
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:textColor="@color/text_color_gray"
                android:id="@+id/redPackage_item_notes"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:textSize="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="单次支付满10金币时可以使用（适用于夺宝所有商品）" />
        </LinearLayout>
    </LinearLayout>
 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="10dp"
     android:background="#F5F5F5"></LinearLayout>
</LinearLayout>
