<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/record_item_all_img"
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:src="@mipmap/ic_launcher"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:background="#F0F0F0"
                android:id="@+id/record_item_all_title"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:lines="2"
                android:textSize="15sp"
                android:textColor="#000000"
                android:text="vivo X6 移动联通双4G手机 4GB+32GB 双卡双待 金色"/>
           <LinearLayout
               android:layout_marginTop="10dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
               <TextView

                   android:textSize="10sp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="期号："
                   android:textColor="#BDBDBD"/>
               <TextView
                   android:textSize="10sp"
                   android:id="@+id/record_item_all_timeNum"
                   android:textColor="#BDBDBD"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="2016060602024"/>
           </LinearLayout>
            <LinearLayout
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:textSize="10sp"
                    android:textColor="#BDBDBD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我已参与："/>
                <TextView
                    android:textSize="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:id="@+id/record_item_all_num"
                    android:textColor="#F03A65"/>
                <TextView
                    android:textSize="10sp"
                    android:textColor="#BDBDBD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="人次"/>
                <TextView
                    android:id="@+id/record_item_all_show"
                    android:layout_marginLeft="60dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="查看详情"
                    android:textColor="#4087CD"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F4F4F4"></LinearLayout>
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:orientation="horizontal">
        <TextView
            android:textSize="13sp"
            android:gravity="center_vertical"
            android:textColor="#BDBDBD"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="获得者："/>
        <TextView
            android:textSize="13sp"
            android:id="@+id/record_item_all_userName"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="没错，就是我"
            android:textColor="#4087CD"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="#F4F4F4">
    </LinearLayout>
</LinearLayout>