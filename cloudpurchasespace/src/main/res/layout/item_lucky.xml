<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/lucky_item_img"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:src="@mipmap/ic_launcher"/>
        <LinearLayout
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:id="@+id/lucky_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="2"
                android:textSize="15sp"
                android:textColor="#000000"
                android:text="OPPO R9 4GB+64GB内存版 雪岩灰 全网通4G手机 双卡双待"/>
          <LinearLayout
              android:layout_marginTop="5dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">
              <TextView
                  android:textColor="@color/text_color_gray"
                  android:textSize="10sp"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="期号："/>
              <TextView
                  android:textColor="@color/text_color_gray"
                  android:textSize="10sp"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="123412412"
                  android:id="@+id/lucky_item_timeNum"/>
          </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:textColor="@color/text_color_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:text="总需："/>
                <TextView
                    android:textColor="@color/text_color_gray"
                    android:textSize="10sp"
                    android:id="@+id/lucky_item_userNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1234"/>
                <TextView
                    android:textColor="@color/text_color_gray"
                    android:textSize="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="次"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:textColor="@color/text_color_gray"
                    android:textSize="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="幸运号码："/>
                <TextView
                    android:textSize="10sp"
                    android:textColor="@color/text_color_red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="123412412"
                    android:id="@+id/lucky_item_luckyNum"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:textColor="@color/text_color_gray"
                    android:textSize="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="本期参与："/>
                <TextView
                    android:textColor="@color/text_color_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="32"
                    android:textSize="10sp"
                    android:id="@+id/lucky_item_joinNum"/>
                <TextView
                    android:textColor="@color/text_color_gray"
                    android:textSize="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="次"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:textColor="@color/text_color_gray"
                    android:textSize="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="揭晓时间："/>
                <TextView
                    android:textColor="@color/text_color_gray"
                    android:textSize="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2016年7月1日18:03:57"
                    android:id="@+id/lucky_item_time"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F5F5F5"></LinearLayout>
    <LinearLayout
        android:id="@+id/lucky_item_show"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <TextView
            android:textColor="#66CD00"
            android:id="@+id/lucky_item_state"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已签收"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#F5F5F5"></LinearLayout>
</LinearLayout>