<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/backgroud_color_white"
    android:id="@+id/one_frag_Layout">
    <RelativeLayout
        android:id="@+id/oneArear_titil"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/backgroud_color_red">
        <ImageButton
            android:id="@+id/one_yuan_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/back_2x"
            android:layout_marginLeft="10dp"
            android:background="@null"/>
        <TextView
            android:id="@+id/one_yuan_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="一元专区"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:textColor="@color/text_color_white"
            android:textSize="@dimen/top_text_20"/>
        <ImageButton
            android:id="@+id/one_yuan_search"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/search_2x"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:background="@null"/>
    </RelativeLayout>
    <com.cloudpurchase.veiw.LoadMoreScrollView
        android:id="@+id/one_frag_scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/one_frag_head_view_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"></LinearLayout>
    <FrameLayout
        android:id="@+id/one_frag_frame_layout"
        android:layout_width="match_parent"
        android:layout_height="152dp">
        <android.support.v4.view.ViewPager
            android:id="@+id/imageDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></android.support.v4.view.ViewPager>
        <LinearLayout
            android:id="@+id/one_fragment_ponit_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">
        </LinearLayout>
    </FrameLayout>
            <RelativeLayout
                android:id="@+id/serller_shop_layout"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@mipmap/back_seller_shop"
                android:paddingBottom="30dp"
                android:visibility="gone">
            </RelativeLayout>
            <include layout="@layout/fragment_oneyuan_area_item"></include>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:id="@+id/one_frag_scroll_inner_layout">
            <LinearLayout
                android:id="@+id/one_yuan_rg"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/new_rbn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="最新"
                    android:gravity="center"
                    android:background="#ED1437"
                    android:textColor="@color/text_color_white"
                    android:textSize="@dimen/good_list_text_size" />
                <Button
                    android:id="@+id/hot_rbn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="最热"
                    android:gravity="center"
                    android:textColor="@color/text_color_block"
                    android:textSize="@dimen/good_list_text_size"
                    android:background="@color/backgroud_color_white"/>
                <Button
                    android:id="@+id/progress_rbn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/backgroud_color_white"
                    android:text="进度"
                    android:gravity="center"
                    android:textColor="@color/text_color_block"
                    android:textSize="@dimen/good_list_text_size"/>
                <Button
                    android:id="@+id/total_rbn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/backgroud_color_white"
                    android:text="总需↑↓"
                    android:gravity="center"
                    android:textColor="@color/text_color_block"
                    android:textSize="@dimen/good_list_text_size"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/one_frag_line"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/backgroud_color_red"
                android:orientation="horizontal"></LinearLayout>
               <FrameLayout
                   android:id="@+id/one_fragmentLayout"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"></FrameLayout>
           </LinearLayout>
            <LinearLayout
                android:id="@+id/cut_line_layout"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/cut_line"
                android:orientation="horizontal"></LinearLayout>
            <LinearLayout
                android:id="@+id/one_frag_foot_view_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"></LinearLayout>
        </LinearLayout>
    </com.cloudpurchase.veiw.LoadMoreScrollView>
</LinearLayout>
