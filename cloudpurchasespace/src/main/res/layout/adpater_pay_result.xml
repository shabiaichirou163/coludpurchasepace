<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/listview_seller"
    tools:context="com.cloudpurchase.cloudpurchase.MainActivity"
    android:orientation="horizontal"
    android:padding="5dp">
        <ImageView
            android:id="@+id/adpaer_pay_result_img"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@mipmap/iphone"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp">
            <TextView
                android:id="@+id/adpaer_pay_result_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="国行【送壳+钢化膜】 Apple/苹果6s"
                android:textColor="@color/text_color_block"
                android:textSize="@dimen/top_text_14"/>
            <TextView
                android:id="@+id/adpaer_pay_result_personnum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="参与人次:1人次"
                android:textColor="@color/text_color_gray"
                android:textSize="@dimen/top_text_13"
                android:layout_marginTop="3dp"/>
            <TextView
                android:id="@+id/adpaer_pay_result_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="参与期数:1期"
                android:textColor="@color/text_color_gray"
                android:textSize="@dimen/top_text_13"
                android:layout_marginTop="3dp"/>
        </LinearLayout>

</LinearLayout>
