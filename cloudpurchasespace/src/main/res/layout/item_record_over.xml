<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">
    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView

            android:id="@+id/record_item_over_img"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:src="@mipmap/ic_launcher"/>
        <LinearLayout
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:id="@+id/record_item_over_goodsName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="2"
                android:textSize="15sp"
                android:textColor="#000000"
                android:text="OPPO R9 4GB+64GB内存版 雪岩灰 全网通4G手机 双卡双待"/>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:textColor="@color/text_color_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:text="总需："/>
                <TextView
                    android:textColor="@color/text_color_gray"
                    android:textSize="10sp"
                    android:id="@+id/record_item_over_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1234"/>
                <TextView
                    android:textColor="@color/text_color_gray"
                    android:textSize="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="次"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#EDEDED">
                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:textColor="@color/text_color_gray"
                        android:textSize="10sp"
                        android:layout_gravity="right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="中奖者："/>
                    <TextView
                        android:textColor="@color/text_color_gray"
                        android:textSize="10sp"
                        android:layout_gravity="right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="幸运号："/>
                    <TextView
                        android:textColor="@color/text_color_gray"
                        android:textSize="10sp"
                        android:layout_gravity="right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="本期参与："/>
                    <TextView
                        android:textColor="@color/text_color_gray"
                        android:textSize="10sp"
                        android:layout_gravity="right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="揭晓时间："/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical">
                    <TextView
                        android:textSize="10sp"
                        android:id="@+id/record_item_over_name"
                        android:lines="1"
                        android:textColor="#ED2453"
                        android:layout_gravity="left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="钱多多"/>
                    <TextView
                        android:textSize="10sp"
                        android:id="@+id/record_item_over_luckyNum"
                        android:textColor="#ED2453"
                        android:layout_gravity="left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="42423"/>
                    <TextView
                        android:textColor="@color/text_color_gray"
                        android:textSize="10sp"
                        android:id="@+id/record_item_over_userNum"
                        android:layout_gravity="left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8人次"/>
                    <TextView
                        android:textColor="@color/text_color_gray"
                        android:textSize="10sp"
                        android:id="@+id/record_item_over_time"
                        android:lines="1"
                        android:layout_gravity="left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2016年6月9日15:11:20"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#F5F5F5"></LinearLayout>
</LinearLayout>