<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroud_color_white"
    tools:context="com.cloudpurchase.cloudpurchase.ShowOrderShareActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <ListView
        android:id="@+id/shopping_cart_goods_lst"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:divider="#00000000"
        android:dividerHeight="0dp"
        android:scrollbars="none"
        android:descendantFocusability="beforeDescendants"></ListView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/unfocused"
        android:padding="10dp"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="共"
            android:textColor="@color/text_color_block"
            android:textSize="@dimen/top_text_14"/>
            <TextView
                android:id="@+id/shopping_cart_goods_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="@color/text_color_red"
                android:textSize="@dimen/top_text_14"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="种商品,"
                android:textColor="@color/text_color_block"
                android:textSize="@dimen/top_text_14"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="合计"
                android:textColor="@color/text_color_block"
                android:textSize="@dimen/top_text_16"/>
            <TextView
                android:id="@+id/shopping_cart_goods_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="@color/text_color_red"
                android:textSize="@dimen/top_text_16"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="金币"
                android:textColor="@color/text_color_block"
                android:textSize="@dimen/top_text_16" />
        </LinearLayout>
        <Button
            android:id="@+id/shopping_cart_goods_pay_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/btn_red_backgroud"
            android:text="去结算"
            android:textColor="@color/text_color_white"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    </LinearLayout>
</RelativeLayout>
