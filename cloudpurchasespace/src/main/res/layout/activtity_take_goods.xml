<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F4">
    <LinearLayout
        android:background="#D41131"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/takeGoods_back"
                android:padding="10dp"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/left2x"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="信息确认"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:gravity="center" />
        </RelativeLayout>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:background="#FFFFFF"
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="商品状态"
                android:textSize="15sp"
                android:gravity="center_vertical"
                android:textColor="#000000"/>
            <LinearLayout
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="100dp"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@mipmap/a_r2_2x"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <ImageView
                                android:id="@+id/takeGoods_flag1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:src="@mipmap/a_r1_2x"/>
                            <TextView
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                            <ImageView
                                android:id="@+id/takeGoods_flag2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:src="@mipmap/a_r1_2x"/>
                            <TextView
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                            <ImageView
                                android:id="@+id/takeGoods_flag3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:src="@mipmap/a_r1_2x"/>
                            <TextView
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                            <ImageView
                                android:id="@+id/takeGoods_flag4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:src="@mipmap/a_r1_2x"/>
                            <TextView
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                            <ImageView
                                android:id="@+id/takeGoods_flag5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:src="@mipmap/a_r1_2x"/>
                        </LinearLayout>
                    </FrameLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:textSize="13sp"
                            android:textColor="@color/text_color_gray"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="获取商品"/>
                        <TextView
                            android:id="@+id/takeGoods_time1"
                            android:gravity="end"
                            android:layout_weight="1"
                            android:textSize="13sp"
                            android:textColor="@color/text_color_gray"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="2016年7月12日09:53:44"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:textSize="13sp"
                            android:textColor="@color/text_color_gray"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="确认收货地址"/>
                        <TextView
                            android:id="@+id/takeGoods_time2"
                            android:gravity="end"
                            android:layout_weight="1"
                            android:textSize="13sp"
                            android:textColor="@color/text_color_gray"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="2016年7月12日09:53:44"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:textSize="13sp"
                            android:textColor="@color/text_color_gray"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="商品派发"/>
                        <TextView
                            android:id="@+id/takeGoods_time3"
                            android:gravity="end"
                            android:layout_weight="1"
                            android:textSize="13sp"
                            android:textColor="@color/text_color_gray"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="2016年7月12日09:53:44"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:textSize="13sp"
                            android:textColor="@color/text_color_gray"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="确认收货"/>
                        <TextView
                            android:id="@+id/takeGoods_time4"
                            android:gravity="end"
                            android:layout_weight="1"
                            android:textSize="13sp"
                            android:textColor="@color/text_color_gray"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="2016年7月12日09:53:44"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:textSize="13sp"
                            android:textColor="@color/text_color_gray"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="已签收"/>
                        <TextView
                            android:id="@+id/takeGoods_time5"
                            android:gravity="end"
                            android:layout_weight="1"
                            android:textSize="13sp"
                            android:textColor="@color/text_color_gray"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="2016年7月12日09:53:44"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_marginTop="15dp"
                android:background="#FFFFFF"
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="物流信息"
                android:textSize="15sp"
                android:gravity="center_vertical"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/takeGoods_goodsTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_gray"
                android:textSize="13sp"
                android:maxLines="2"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="#FFFFFF"
                android:text="三星 2016版GALAXY A7（A7100 三星双曲面新款手机西安9350行货多钱"/>
            <LinearLayout
                android:paddingTop="10dp"
                android:background="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:paddingLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_gray"
                    android:textSize="14sp"
                    android:text="物流信息：" />
                <TextView
                    android:id="@+id/takeGoods_type"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_gray"
                    android:textSize="14sp"
                    android:text="顺丰" />
            </LinearLayout>
            <LinearLayout
                android:paddingTop="10dp"
                android:background="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:paddingLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_gray"
                    android:textSize="14sp"
                    android:text="运单号码：" />
                <TextView
                    android:id="@+id/takeGoods_typeNum"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_gray"
                    android:textSize="14sp"
                    android:text="1231243312" />
            </LinearLayout>
            <TextView
                android:layout_marginTop="15dp"
                android:background="#FFFFFF"
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="地址信息"
                android:textSize="15sp"
                android:gravity="center_vertical"
                android:textColor="#000000"/>
            <LinearLayout
                android:background="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/takeGoods_name"
                    android:paddingLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_gray"
                    android:textSize="14sp"
                    android:text="Augustine" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/takeGoods_phone"
                    android:paddingRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_gray"
                    android:textSize="14sp"
                    android:text="1231243312" />
            </LinearLayout>
            <TextView
                android:id="@+id/takeGoods_address"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/text_color_gray"
                android:text="陕西省西安市雁塔区"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="vertical"></LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>