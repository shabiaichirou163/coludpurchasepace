<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/listview_seller"
    tools:context="com.cloudpurchase.cloudpurchase.MainActivity"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:layout_marginBottom="1dp"
    android:descendantFocusability="blocksDescendants">
<ImageView
    android:id="@+id/goods_img"
    android:layout_width="120dp"
    android:layout_height="120dp"
    android:layout_gravity="center"
    android:src="@mipmap/iphone"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
       <TextView
           android:id="@+id/total_price_txt"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="价格：¥ 3999"
           android:textSize="@dimen/top_text_12"
           android:textColor="@color/text_color_block"/>
        <ProgressBar
            android:id="@+id/prgress"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginTop="5dp"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_gravity="center"
            android:max="100"
            android:progress="20"
            android:progressDrawable="@drawable/progressbar_color"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/participate_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text="123412"
                android:textColor="#FE9784"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/total_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="5234"
                android:textSize="10sp"
                android:textColor="@color/text_color_block" />

            <TextView
                android:id="@+id/remaining_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="right"
                android:text="64"
                android:textColor="@color/color_blue"
                android:textSize="10sp"
                android:layout_gravity="right"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text="已参与"
                android:textSize="10sp"
                android:textColor="@color/text_color_block"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="总需人次"
                android:textSize="10sp"
                android:textColor="@color/text_color_block"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="right"
                android:text="剩余"
                android:textSize="10sp"
                android:textColor="@color/text_color_block"/>
    </LinearLayout>
    </LinearLayout>
        <ImageButton
            android:id="@+id/goods_cart_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:background="@mipmap/gouwuche_2x"
            android:focusable="false"/>
    </LinearLayout>
</LinearLayout>
