<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/backgroud_color_white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/backgroud_color_red">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="最新揭晓"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:textColor="@color/text_color_white"
            android:textSize="@dimen/top_text_size"/>
        <ImageButton
            android:id="@+id/new_shown_search"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/search_2x"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:background="@null"/>
    </RelativeLayout>
      <com.cloudpurchase.veiw.LoadMoreScrollView
          android:id="@+id/new_shown_lazyScrollview"
          android:layout_width="match_parent"
          android:layout_height="match_parent">
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical">
         <LinearLayout
             android:id="@+id/head_view_layout"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"></LinearLayout>
<RadioGroup
    android:id="@+id/new_shown_rg"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:orientation="horizontal">
    <RadioButton
        android:id="@+id/showned_rb"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:button="@null"
        android:text="已经揭晓"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/text_color_white"
        android:textSize="@dimen/new_show_text_size"
        android:checked="true"
        android:background="@color/backgroud_color_red"/>
    <RadioButton
        android:id="@+id/new_shown_rb"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:button="@null"
        android:text="即将揭晓"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/text_color_block"
        android:textSize="@dimen/new_show_text_size" />
</RadioGroup>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/backgroud_color_red"></LinearLayout>
          <FrameLayout
              android:id="@+id/newShow_fragmentLayout"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              ></FrameLayout>
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="1px"
              android:background="@color/cut_line"
              android:orientation="horizontal"></LinearLayout>
          <LinearLayout
              android:id="@+id/foot_view_layout"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"></LinearLayout>
      </LinearLayout>
      </com.cloudpurchase.veiw.LoadMoreScrollView>
</LinearLayout>
