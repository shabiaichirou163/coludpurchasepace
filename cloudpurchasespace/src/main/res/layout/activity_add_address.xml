<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">
    <LinearLayout
        android:background="#D41131"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/address_back"
                android:padding="10dp"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/left2x"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="添加地址"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:gravity="center" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:text="收货人"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:textColor="#000000"/>
        <EditText
            android:singleLine="true"
            android:id="@+id/address_name"
            android:layout_marginLeft="15dp"
            android:hint="收货人姓名"
            android:maxLength="8"
            android:textSize="15sp"
            android:layout_weight="1"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F5F5F5"
        android:layout_marginLeft="10dp"></LinearLayout>
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:text="手机号码"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:textColor="#000000"/>
        <EditText
            android:singleLine="true"
            android:id="@+id/address_mobile"
            android:layout_marginLeft="15dp"
            android:hint="手机号码"
            android:phoneNumber="true"
            android:maxLength="16"
            android:textSize="15sp"
            android:layout_weight="1"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F5F5F5"
        android:layout_marginLeft="10dp"></LinearLayout>
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:text="收货地址"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:textColor="#000000"/>
        <TextView
            android:id="@+id/address_selectAddress"
            android:layout_marginLeft="15dp"
            android:text="请选择"
            android:textColor="#000000"
            android:textSize="15sp"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F5F5F5"
        android:layout_marginLeft="10dp"></LinearLayout>
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="详细地址"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:textColor="#000000"/>
        <EditText
            android:id="@+id/address_info"
            android:padding="5dp"
            android:maxLength="50"
            android:textSize="15sp"
            android:background="@null"
            android:gravity="start|center_vertical"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F5F5F5"
        android:layout_marginLeft="10dp"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F5F5F5"
        android:layout_marginLeft="10dp"></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#F4F4F4">
        <Button
            android:id="@+id/address_addInfo"
            android:padding="10dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:text="确认"
            android:textColor="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/ljdb"/>
    </LinearLayout>
</LinearLayout>