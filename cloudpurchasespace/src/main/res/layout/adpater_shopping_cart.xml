<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/listview_seller"
    tools:context="com.cloudpurchase.cloudpurchase.MainActivity"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">
   <TextView
       android:id="@+id/adpaer_shopping_cart_goods_type"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_weight="1"
       android:text="国行【送壳+钢化膜】 Apple/苹果6s"
       android:textSize="@dimen/top_text_14"
       android:textColor="@color/text_color_block"
       android:layout_gravity="center_vertical"
       android:focusable="true"
       android:focusableInTouchMode="true"/>
   <ImageButton
       android:id="@+id/adpaer_shopping_cart_delete_goods"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:src="@mipmap/delete2"
       android:background="@null" />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/unfocused"></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">
        <ImageView
            android:id="@+id/adpaer_shopping_cart_goods_img"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@mipmap/iphone"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp">
            <TextView
                android:id="@+id/adpaer_shopping_cart_need_person"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="总需: 5650次,剩余23人次"
                android:textColor="@color/text_color_block"
                android:textSize="@dimen/text_size_12"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="人次："
                    android:textColor="@color/text_color_block"
                    android:textSize="@dimen/text_size_12"
                    android:layout_gravity="center_vertical"/>
                <LinearLayout
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/add_and_reduce"
                    android:orientation="horizontal">
                <ImageButton
                    android:id="@+id/adpaer_shopping_cart_reduce_btn"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:src="@mipmap/reduce_2x"
                    android:background="@null" />
                <EditText
                    android:id="@+id/adpaer_shopping_cart_num_txt"
                    android:layout_width="65dp"
                    android:layout_height="match_parent"
                    android:text="1"
                    android:gravity="center"
                    android:textColor="@color/text_color_block"
                    android:background="@null"
                    android:numeric="integer"
                    android:textSize="@dimen/top_text_16"
                    android:singleLine="true"
                    android:maxLength="7"
                    android:selectAllOnFocus="true" />
                    <ImageButton
                        android:id="@+id/adpaer_shopping_cart_add_btn"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:src="@mipmap/add"
                        android:background="@null" />
                </LinearLayout>
                <Button
                    android:id="@+id/adpaer_shopping_cart_baowei_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/baowei"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:focusable="false" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/unfocused"></LinearLayout>
</LinearLayout>
