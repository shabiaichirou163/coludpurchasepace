<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroud_color_white"
    android:orientation="vertical"
    tools:context="com.cloudpurchase.cloudpurchase.PayResultActivity">
    <LinearLayout
        android:background="@mipmap/login_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageButton
                android:id="@+id/pay_result_back"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/left2x"
                android:background="@null"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="支付结果"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/top_text_20"
                android:gravity="center" />
        </RelativeLayout>
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:layout_marginTop="30dp">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/pay_result"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="购买成功"
        android:textColor="@color/text_color_block"
        android:textSize="@dimen/top_text_20"
        android:layout_gravity="center_vertical"/>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">
        <Button
            android:id="@+id/pay_result_look"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="查看零购记录"
            android:background="@mipmap/btn_gray_bg"
            android:textSize="@dimen/top_text_16"/>
        <Button
            android:id="@+id/pay_result_again"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@mipmap/btn_red_backgroud"
            android:layout_marginLeft="20dp"
            android:text="继续逛逛"
            android:textSize="@dimen/top_text_16"
            android:textColor="@color/text_color_white"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginTop="20dp"
        android:background="@color/unfocused"></LinearLayout>
    <TextView
        android:id="@+id/pay_result_goods_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="您成功参与了1件商品,共1人次,信息如下:"
        android:textColor="@color/text_color_block"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textSize="@dimen/text_size_12"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/cut_line"></LinearLayout>
    <ListView
        android:id="@+id/pay_result_shopping_goods_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dividerHeight="1dp"
        android:divider="@color/cut_line"></ListView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/cut_line"></LinearLayout>
</LinearLayout>
