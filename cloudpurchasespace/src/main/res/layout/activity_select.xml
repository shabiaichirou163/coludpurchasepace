<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroud_color_red"
    android:id="@+id/select_activity_vg">
    <TextView
        android:id="@+id/select_activity_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textSize="22sp"
        android:text="云购空间"
        android:textStyle="bold"
        android:textColor="@color/text_color_white"
        android:gravity="center_horizontal"/>
    <TextView
        android:id="@+id/select_activity_txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/select_activity_txt"
        android:layout_marginTop="30dp"
        android:textSize="22sp"
        android:text="一个让你收获惊喜的平台"
        android:textStyle="bold"
        android:textColor="@color/text_color_white"
        android:layout_centerInParent="true"/>
    <TextView
        android:id="@+id/select_activity_txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/select_activity_txt1"
        android:textSize="16sp"
        android:text="A platform for you to again surprise"
        android:textStyle="bold"
        android:textColor="#fcd1d0"
        android:layout_centerInParent="true"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/yinying"
        android:layout_below="@+id/select_activity_txt">
    </ImageView>
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@mipmap/lead_wite"
        android:layout_centerInParent="true"
        android:id="@+id/imageView" />
    <RelativeLayout
        android:id="@+id/imageView3"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_centerInParent="true"
        android:background="@mipmap/hongquan">
    <ImageView
        android:id="@+id/select_rotate"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="0.3dp"
        android:layout_marginRight="0.3dp"
        android:src="@mipmap/huxin"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />
    </RelativeLayout>
    <com.cloudpurchase.veiw.RoundImageView
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:src="@mipmap/lead_pic"
        android:layout_centerInParent="true"
        android:id="@+id/imageView2" />

    <ImageButton
        android:id="@+id/select_oneYuanArea"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@mipmap/yiyuan"
        android:layout_alignTop="@+id/select_smallRoom"
        android:layout_toStartOf="@+id/imageView" />
    <ImageButton
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/select_tenYuanArea"
        android:background="@mipmap/shiyuan"
        android:layout_above="@+id/select_oneHundredYuanArea"
        android:layout_toEndOf="@+id/imageView" />
    <ImageButton
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/select_oneHundredYuanArea"
        android:background="@mipmap/baiyuan"
        android:layout_alignBottom="@+id/select_sellerArea"
        android:layout_alignEnd="@+id/imageView3" />
    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/select_smallRoom"
        android:background="@mipmap/small_room1"
        android:layout_marginBottom="30dp"
        android:layout_above="@+id/select_tenYuanArea"
        android:layout_toEndOf="@+id/imageView2" />
    <ImageButton
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/select_sellerArea"
        android:background="@mipmap/seller"
        android:layout_below="@+id/imageView2"
        android:layout_alignStart="@+id/select_oneYuanArea" />
</RelativeLayout>
